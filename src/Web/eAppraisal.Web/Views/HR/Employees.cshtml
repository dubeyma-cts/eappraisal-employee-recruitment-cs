@model List<EmployeeDto>
@{ ViewData["Title"] = "Employees"; }
<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>Employees</h2>
    <a href="/HR/CreateEmployee" class="btn btn-primary">Add Employee</a>
</div>
@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}
@if (TempData["Warning"] != null)
{
    <div class="alert alert-warning">@TempData["Warning"]</div>
}
<table class="table table-striped table-hover">
    <thead class="table-dark">
        <tr><th>Name</th><th>Email</th><th>Department</th><th>City</th><th>Manager</th><th>PAN</th><th>Actions</th></tr>
    </thead>
    <tbody>
        @foreach (var e in Model)
        {
            <tr>
                <td>@e.FullName</td>
                <td>@e.Email</td>
                <td>@e.Department</td>
                <td>@e.City</td>
                <td>@e.ManagerName</td>
                <td>@e.PanNo</td>
                <td><a href="/HR/EditEmployee/@e.Id" class="btn btn-sm btn-outline-primary">Edit</a></td>
            </tr>
        }
    </tbody>
</table>
