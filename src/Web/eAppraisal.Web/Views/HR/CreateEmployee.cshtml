@model EmployeeDto
@{ ViewData["Title"] = "Add Employee"; }
<h2>Add Employee</h2>
<form method="post" class="mt-3">
    @await Html.PartialAsync("_EmployeeForm", Model)

    <hr />
    <h5>Login Account (Optional)</h5>
    <p class="text-muted small">Create a login account so this employee can log in to the system.</p>
    <div class="mb-3 form-check">
        <input type="checkbox" class="form-check-input" id="createLogin" name="createLogin" value="true" onchange="toggleLoginFields()" />
        <label class="form-check-label" for="createLogin">Create login account for this employee</label>
    </div>
    <div id="loginFields" style="display:none;">
        <div class="row">
            <div class="col-md-4 mb-3">
                <label class="form-label">Role</label>
                <select name="loginRole" class="form-select">
                    <option value="Employee">Employee</option>
                    <option value="Manager">Manager</option>
                    <option value="HR">HR</option>
                </select>
            </div>
            <div class="col-md-4 mb-3">
                <label class="form-label">Password</label>
                <input type="password" name="loginPassword" class="form-control" placeholder="Min 6 chars, upper + lower + digit + special" />
            </div>
        </div>
    </div>

    <button type="submit" class="btn btn-primary">Create</button>
    <a href="/HR/Employees" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
<script>
    function toggleLoginFields() {
        var cb = document.getElementById('createLogin');
        document.getElementById('loginFields').style.display = cb.checked ? 'block' : 'none';
    }
</script>
}
