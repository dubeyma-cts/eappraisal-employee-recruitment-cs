@model ManagerCommentDto
@{ ViewData["Title"] = "Enter Comments"; }
<h2>Enter Comments for @ViewBag.EmployeeName</h2>
<form method="post" class="mt-3">
    <input type="hidden" asp-for="AppraisalId" />
    <div class="mb-3">
        <label asp-for="Achievements" class="form-label"></label>
        <textarea asp-for="Achievements" class="form-control" rows="4"></textarea>
        <span asp-validation-for="Achievements" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Gaps" class="form-label"></label>
        <textarea asp-for="Gaps" class="form-control" rows="3"></textarea>
    </div>
    <div class="mb-3">
        <label asp-for="Suggestions" class="form-label"></label>
        <textarea asp-for="Suggestions" class="form-control" rows="3"></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Save Comments</button>
    <a href="/Manager/MyAppraisals" class="btn btn-secondary">Cancel</a>
</form>
