@model FinalizeAppraisalDto
@{ ViewData["Title"] = "Finalize Appraisal"; }
<h2>Finalize Appraisal</h2>
@if (ViewBag.Detail is AppraisalDetailDto detail)
{
    <p>Employee: <strong>@detail.EmployeeName</strong> | Department: <strong>@detail.Department</strong></p>
}
<form method="post" class="mt-3">
    <input type="hidden" asp-for="AppraisalId" />
    <div class="card mb-3">
        <div class="card-header"><strong>CTC Details</strong></div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-4 mb-3">
                    <label asp-for="Basic" class="form-label"></label>
                    <input asp-for="Basic" class="form-control" type="number" step="0.01" />
                </div>
                <div class="col-md-4 mb-3">
                    <label asp-for="DA" class="form-label"></label>
                    <input asp-for="DA" class="form-control" type="number" step="0.01" />
                </div>
                <div class="col-md-4 mb-3">
                    <label asp-for="HRA" class="form-label"></label>
                    <input asp-for="HRA" class="form-control" type="number" step="0.01" />
                </div>
            </div>
            <div class="row">
                <div class="col-md-4 mb-3">
                    <label asp-for="FoodAllowance" class="form-label"></label>
                    <input asp-for="FoodAllowance" class="form-control" type="number" step="0.01" />
                </div>
                <div class="col-md-4 mb-3">
                    <label asp-for="PF" class="form-label"></label>
                    <input asp-for="PF" class="form-control" type="number" step="0.01" />
                </div>
            </div>
            <div class="mb-3 form-check">
                <input asp-for="IsPromoted" class="form-check-input" />
                <label asp-for="IsPromoted" class="form-check-label">Employee is promoted</label>
            </div>
            <div class="mb-3">
                <label asp-for="NextAppraisalDate" class="form-label"></label>
                <input asp-for="NextAppraisalDate" class="form-control" type="date" />
            </div>
        </div>
    </div>
    <button type="submit" class="btn btn-success">Finalize Appraisal</button>
    <a href="/Manager/MyAppraisals" class="btn btn-secondary">Cancel</a>
</form>
