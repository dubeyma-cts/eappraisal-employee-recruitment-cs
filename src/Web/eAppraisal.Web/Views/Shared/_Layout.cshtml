<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - e-Appraisal</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body { min-height: 100vh; }
        .sidebar { width: 250px; min-height: 100vh; background: #212529; position: fixed; top: 0; left: 0; z-index: 100; }
        .sidebar .nav-link { color: #adb5bd; padding: 10px 20px; }
        .sidebar .nav-link:hover, .sidebar .nav-link.active { color: #fff; background: #343a40; }
        .sidebar .sidebar-header { padding: 15px 20px; color: #fff; font-size: 1.2rem; border-bottom: 1px solid #343a40; }
        .main-content { margin-left: 250px; padding: 20px; }
        .no-sidebar .main-content { margin-left: 0; }
    </style>
</head>
<body class="@(ViewData["HideSidebar"] != null ? "no-sidebar" : "")">
    @if (ViewData["HideSidebar"] == null)
    {
        await Html.RenderPartialAsync("_SidebarNav");
    }
    <div class="main-content">
        <div class="container-fluid">
            @RenderBody()
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
