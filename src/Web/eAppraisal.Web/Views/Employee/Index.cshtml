@{ ViewData["Title"] = "Employee Dashboard"; }
<h2>Employee Dashboard</h2>
<div class="row mt-4">
    <div class="col-md-4">
        <div class="card text-white bg-primary mb-3">
            <div class="card-body">
                <h5 class="card-title">My Profile</h5>
                <p class="card-text">View and update your profile</p>
                <a href="/Employee/MyProfile" class="btn btn-light btn-sm">View Profile</a>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card text-white bg-success mb-3">
            <div class="card-body">
                <h5 class="card-title">My Appraisals</h5>
                <p class="card-text">View your appraisal history</p>
                <a href="/Employee/MyAppraisal" class="btn btn-light btn-sm">View Appraisals</a>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card text-white bg-info mb-3">
            <div class="card-body">
                <h5 class="card-title">Reports</h5>
                <p class="card-text">View appraisal reports</p>
                <a href="/Reports" class="btn btn-light btn-sm">View Reports</a>
            </div>
        </div>
    </div>
</div>
