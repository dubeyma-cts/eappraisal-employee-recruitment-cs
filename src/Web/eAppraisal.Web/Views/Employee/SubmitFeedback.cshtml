@model EmployeeFeedbackDto
@{ ViewData["Title"] = "Submit Feedback"; }
<h2>Submit Feedback</h2>
@if (ViewBag.Detail is AppraisalDetailDto d && !string.IsNullOrEmpty(d.Achievements))
{
    <div class="card mb-3">
        <div class="card-header"><strong>Manager's Comments</strong></div>
        <div class="card-body">
            <p><strong>Achievements:</strong> @d.Achievements</p>
            <p><strong>Gaps:</strong> @d.Gaps</p>
            <p><strong>Suggestions:</strong> @d.Suggestions</p>
        </div>
    </div>
}
<form method="post" class="mt-3">
    <input type="hidden" asp-for="AppraisalId" />
    <div class="mb-3">
        <label asp-for="FeedbackText" class="form-label">My Feedback</label>
        <textarea asp-for="FeedbackText" class="form-control" rows="4"></textarea>
        <span asp-validation-for="FeedbackText" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="SelfAssessment" class="form-label">Self Assessment</label>
        <textarea asp-for="SelfAssessment" class="form-control" rows="3"></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Submit Feedback</button>
    <a href="/Employee/MyAppraisal" class="btn btn-secondary">Cancel</a>
</form>
