@model EmployeeDto
@{ ViewData["Title"] = "Edit Profile"; }
<h2>Edit My Profile</h2>
<p class="text-muted">You can update personal information. Department and Manager are managed by HR.</p>
<form method="post" class="mt-3">
    <div class="row">
        <div class="col-md-6 mb-3">
            <label asp-for="FirstName" class="form-label"></label>
            <input asp-for="FirstName" class="form-control" />
        </div>
        <div class="col-md-6 mb-3">
            <label asp-for="LastName" class="form-label"></label>
            <input asp-for="LastName" class="form-control" />
        </div>
    </div>
    <div class="row">
        <div class="col-md-6 mb-3">
            <label asp-for="MobileNo" class="form-label"></label>
            <input asp-for="MobileNo" class="form-control" />
        </div>
        <div class="col-md-6 mb-3">
            <label asp-for="PersonalPhone" class="form-label"></label>
            <input asp-for="PersonalPhone" class="form-control" />
        </div>
    </div>
    <div class="mb-3">
        <label asp-for="Address" class="form-label"></label>
        <input asp-for="Address" class="form-control" />
    </div>
    <div class="row">
        <div class="col-md-4 mb-3">
            <label asp-for="City" class="form-label"></label>
            <input asp-for="City" class="form-control" />
        </div>
        <div class="col-md-4 mb-3">
            <label asp-for="Gender" class="form-label"></label>
            <select asp-for="Gender" class="form-select">
                <option value="">--Select--</option>
                <option>Male</option><option>Female</option><option>Other</option>
            </select>
        </div>
        <div class="col-md-4 mb-3">
            <label asp-for="MaritalStatus" class="form-label"></label>
            <select asp-for="MaritalStatus" class="form-select">
                <option value="">--Select--</option>
                <option>Single</option><option>Married</option>
            </select>
        </div>
    </div>
    <div class="row">
        <div class="col-md-4 mb-3">
            <label asp-for="DateOfBirth" class="form-label"></label>
            <input asp-for="DateOfBirth" class="form-control" type="date" />
        </div>
        <div class="col-md-4 mb-3">
            <label asp-for="PanNo" class="form-label"></label>
            <input asp-for="PanNo" class="form-control" />
        </div>
        <div class="col-md-4 mb-3">
            <label asp-for="PassportNo" class="form-label"></label>
            <input asp-for="PassportNo" class="form-control" />
        </div>
    </div>
    <button type="submit" class="btn btn-primary">Save Changes</button>
    <a href="/Employee/MyProfile" class="btn btn-secondary">Cancel</a>
</form>
