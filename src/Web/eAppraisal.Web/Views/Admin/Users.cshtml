@model List<UserDto>
@{ ViewData["Title"] = "User Management"; }
<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>User Management</h2>
    <a href="/Admin/CreateUser" class="btn btn-primary">Create New User</a>
</div>
@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}
<table class="table table-striped mt-3">
    <thead class="table-dark">
        <tr><th>Email</th><th>Full Name</th><th>Role</th><th>Status</th><th>Failed Attempts</th><th>Actions</th></tr>
    </thead>
    <tbody>
        @foreach (var u in Model)
        {
            <tr>
                <td>@u.Email</td>
                <td>@u.FullName</td>
                <td><span class="badge bg-info">@u.AppRole</span></td>
                <td>
                    @if (u.IsLocked)
                    { <span class="badge bg-danger">Locked</span> }
                    else
                    { <span class="badge bg-success">Active</span> }
                </td>
                <td>@u.FailedLoginAttempts</td>
                <td>
                    @if (u.IsLocked)
                    {
                        <form method="post" asp-action="UnlockUser" class="d-inline">
                            <input type="hidden" name="userId" value="@u.Id" />
                            <button type="submit" class="btn btn-sm btn-success">Unlock</button>
                        </form>
                    }
                    else
                    {
                        <form method="post" asp-action="LockUser" class="d-inline">
                            <input type="hidden" name="userId" value="@u.Id" />
                            <button type="submit" class="btn btn-sm btn-warning">Lock</button>
                        </form>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
