@page "/hr/employees"
@rendermode InteractiveServer
@attribute [Microsoft.AspNetCore.Authorization.Authorize(Roles = AppRoles.HR)]
@inject EmployeeService EmpSvc

<PageTitle>Employees — HR</PageTitle>

<div class="container-fluid py-3">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h3 class="mb-0"><i class="bi bi-people-fill me-2 text-primary"></i>Employee Directory</h3>
        <a href="/hr/add-employee" class="btn btn-success">
            <i class="bi bi-person-plus me-1"></i>Add Employee
        </a>
    </div>

    @if (_loading)
    {
        <div class="text-center py-5"><span class="spinner-border text-primary"></span></div>
    }
    else if (_employees.Count == 0)
    {
        <div class="alert alert-info">No employees found.</div>
    }
    else
    {
        <div class="mb-3">
            <input @bind="_filter" @bind:event="oninput" class="form-control w-25"
                   placeholder="Search by name or department..." />
        </div>
        <div class="table-responsive">
            <table class="table table-hover table-bordered align-middle">
                <thead class="table-primary">
                    <tr>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Department</th>
                        <th>City</th>
                        <th>PAN (Masked)</th>
                        <th>Reports To</th>
                        <th>CTC (₹)</th>
                        <th>Joined</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var e in Filtered)
                    {
                        <tr>
                            <td class="fw-semibold">@e.Name</td>
                            <td><a href="mailto:@e.Email">@e.Email</a></td>
                            <td><span class="badge bg-secondary">@e.Department</span></td>
                            <td>@e.City</td>
                            <td><code class="text-danger">@e.MaskedPan</code></td>
                            <td>@(e.ReportsToName ?? "—")</td>
                            <td>₹@e.CTC.ToString("N0")</td>
                            <td>@e.DateOfJoining.ToString("dd MMM yyyy")</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <small class="text-muted">Showing @Filtered.Count() of @_employees.Count employee(s). PAN is always masked.</small>
    }
</div>

@code {
    private List<EmployeeDto> _employees = [];
    private bool _loading = true;
    private string _filter = string.Empty;

    private IEnumerable<EmployeeDto> Filtered =>
        string.IsNullOrWhiteSpace(_filter)
            ? _employees
            : _employees.Where(e =>
                e.Name.Contains(_filter, StringComparison.OrdinalIgnoreCase) ||
                e.Department.Contains(_filter, StringComparison.OrdinalIgnoreCase));

    protected override async Task OnInitializedAsync()
    {
        _employees = await EmpSvc.GetAllAsync();
        _loading = false;
    }
}
